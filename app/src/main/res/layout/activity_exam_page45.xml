<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ExamPage45Activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#87cefa"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pcslogo"
                        android:layout_width="200dp"
                        android:layout_height="200sp"
                        android:layout_gravity="center"
                        android:scaleType="fitStart"
                        android:src="@drawable/logo"
                        tools:layout_editor_absoluteX="-5dp"
                        tools:layout_editor_absoluteY="3dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/studentid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.5"
                        android:text="@string/student_id"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="90dp"
                        android:text="@string/left"
                        android:textColor="#000000"
                        android:textSize="12sp" />



                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="12"
                android:background="#ffffcc"
                android:backgroundTintMode="src_over"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:gravity="left"
                    android:text="@string/page1_question45"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/page1_radio_group"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/page1_radio_button184"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt204"
                        android:layout_marginTop="10sp"
                        android:textSize="12sp"/>
                    <RadioButton
                        android:id="@+id/page1_radio_button185"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt205"
                        android:layout_marginTop="10sp"
                        android:textSize="12sp"/>
                    <RadioButton
                        android:id="@+id/page1radio_button186"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt206"
                        android:layout_marginTop="10sp"
                        android:textSize="12sp"/>
                    <RadioButton
                        android:id="@+id/page1_radio_button187"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt207"
                        android:layout_marginTop="10sp"
                        android:textSize="12sp"/>
                    <RadioButton
                        android:id="@+id/page1_radio_button10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/opt34"
                        android:layout_marginTop="10sp"
                        android:textSize="12sp"/>


                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_back44"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_rounded_corner3"
                            android:layout_weight="0.5"
                            android:text="@string/back"
                            android:textSize="12sp"
                            android:layout_gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_next45"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_rounded_corner3"
                            android:layout_weight="0.5"
                            android:text="@string/next"
                            android:textSize="12sp"
                            android:layout_gravity="right"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>